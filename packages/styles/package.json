{
  "name": "@waveui/styles",
  "version": "0.0.1",
  "description": "Wave UI tailwind styles",
  "main": "./dist/tailwind.css",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prebuild": "pnpm clean",
    "build": "pnpm exec tailwind -i ./src/index.css -o dist/tailwind.css --minify -c ./src/tailwind.config.js",
    "publish": "pnpm publish --access public",
    "test:link": "pnpm build && pnpm link --global"
  },
